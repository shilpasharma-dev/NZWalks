@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>



@{
    ViewData["Title"] = "Region Page";
}


<h1 class="nt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a type="button" class="btn btn-warning btn-outline-primary " asp-controller="Regions" asp-action="AddRegion">Add A New Region</a>
</div>


<table class="table table-hover table-striped table-info table-bordered border-danger">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td><a asp-controller="Regions" asp-action="EditRegion" asp-route-id="@region.Id">Edit</a></td>
            </tr>
        }

</table>